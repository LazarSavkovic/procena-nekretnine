<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-md-8 offset-md-2 glass d-flex flex-row p-0">
        <div class="sidebar">
            <div class="user py-5">
                <img src="/images/avatar.png" class="avatar" alt="">
                <h3><%=username%></h3>
                <p>Clan</p>
            </div>
            <div class="links position-relative">
                <div class="link"><a href="/flats/new"><img src="/images/house.svg" class="house-svg" alt=""> Nova nekretnina</a></div>
            </div>
        </div>
        <div class="properties d-flex flex-column">
        <div class="status">
            <h1>Tvoje nekretnine</h1>
            <% if (flats.length > 1) { %>
                <input class="form-control" id="filter" type="text"  placeholder="Filtriraj po naslovu">
          <%  } %>

        </div>
    <div class="cards  d-flex flex-column">
    <% flats.forEach((flat, index) => { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4 index-map" id="map-<%=index%>"></div>
                <div class="col-md-8">
                    <div class="card-body d-flex flex-column">
                        <h5>
                            <%= flat.title %>
                        </h5>
                        <p class="card-text">Procenjena vrednost: <b><%= flat.value %> â‚¬</b></p>
                        <p class="card-text">Povrsina: <%= flat.sq_mt%> m<sup>2</sup></p>
                        <a href="/flats/<%= flat._id %>" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
    </div>
    <div class="oval1"></div>
    <div class="oval2"></div>
    <div class="oval3"></div>
    <div class="oval4"></div>
</div>
        <script>
            const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
            const flats = <%- JSON.stringify(flats) %>;
        </script>
        <script src="/javascripts/indexPageMap.js"></script>
        <script src="/javascripts/indexFilter.js"></script>