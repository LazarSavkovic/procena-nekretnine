<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-md-8 offset-md-2">
    <h1>Tvoje nekretnine</h1>
    <div id="dashboard" class="mb-3">
    <a href="/flats/new">Unesi novu nekretninu</a>
</div>
    <% flats.forEach((flat, index) => { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4 index-map" id="map-<%=index%>"></div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5>
                            <%= flat.title %>
                        </h5>
                        <p class="card-text">Procenjena vrednost: <%= flat.value %>
                            â‚¬</p>
                        <p class="card-text"><small class="text-muted">Broj soba: <%= flat.rooms %></small></p>
                        <p class="card-text"><small class="text-muted">Povrsina: <%= flat.sq_mt%> m2</small></p>
                        <a href="/flats/<%= flat._id %>" class="btn btn-primary"> Vise detalja</a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>

        <script>
            const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
            const flats = <%- JSON.stringify(flats) %>;
        </script>
        <script src="/javascripts/indexPageMap.js"></script>