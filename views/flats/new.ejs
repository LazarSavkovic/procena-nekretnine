<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-md-6 offset-md-3 glass p-4">
            <h1 class="text-center">Nova nekretnina</h1>
            <form action="/flats" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Naziv</label>
                    <input class="form-control" type="text" id="title" name="flat[title]" autofocus required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Adresa:</label>
                    <input class="form-control" type="text" id="location" name="flat[location]" required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="short_description">Kratak opis:</label>
                    <textarea class="form-control" name="flat[short_description]" id="short_description" cols="30"
                        rows="5"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="sq_mt">Metara kvadratnih:</label>
                    <input class="form-control" type="number" name="flat[sq_mt]" id="sq_mt" required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="rooms">Broj soba:</label>
                    <input class="form-control" type="number" name="flat[rooms]" id="rooms" required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="floor">Sprat:</label>
                    <input class="form-control" type="number" name="flat[floor]" id="floor">
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Unesi</button>
                </div>
            </form> <a href="/flats">Moje nekretnine</a>
        </div>
        <div class="oval1"></div>
        <div class="oval2"></div>
        <div class="oval3"></div>
        <div class="oval4"></div>
    </div>