<% layout("layouts/boilerplate") %>

    <div class="row">
        <div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-10 offset-1 glass form-glass">
            <h1 class="text-center">Izmeni nekretninu</h1>
            <form action="/flats/<%= flat._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3 text-input">
                    <label class="form-label" for="title">Naziv</label>
                    <input class="form-control" type="text" id="title" name="flat[title]" value="<%=flat.title %>" autofocus
                        required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3 text-input">
                    <label class="form-label" for="location">Adresa:</label>
                    <input class="form-control" type="text" id="location" name="flat[location]" value="<%=flat.location %>" required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3 text-input">
                    <label class="form-label" for="short_description">Kratak opis:</label>
                    <textarea class="form-control" name="flat[short_description]" id="short_description" cols="30"
                        rows="5"><%= flat.short_description %></textarea>
                </div>
                <div class="number-inputs row d-flex flex-row">
                <div class="number-input col-6 col-md-4 mb-3">
                    <label class="form-label" for="sq_mt">Povrsina (m<sup>2</sup>):</label>
                    <input class="form-control" type="number" name="flat[sq_mt]" id="sq_mt" value="<%=flat.sq_mt %>"
                        required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="number-input col-6 col-md-4 mb-3">
                    <label class="form-label" for="rooms">Broj soba:</label>
                    <input class="form-control" type="number" name="flat[rooms]" id="rooms" value="<%=flat.rooms %>"
                        required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="number-input col-6 col-md-4 mb-3">
                    <label class="form-label" for="floor">Sprat:</label>
                    <input class="form-control" type="number" name="flat[floor]" value="<%=flat.floor %>" id="floor">
                    <div class="valid-feedback">Odlicno!</div>
                </div>
            </div>
                <div class="mb-3">
                    <button class="btn btn-info" type="submit">Izmeni</button>
                </div>
            </form>
            <a href="/flats/<%= flat._id %> ">Vrati se na stan</a>
        </div>
        <div class="oval1"></div>
        <div class="oval2"></div>
        <div class="oval3"></div>
        <div class="oval4"></div>
    </div>