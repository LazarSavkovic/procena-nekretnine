<% layout("layouts/boilerplate") %>

    <div class="row">
        <div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-10 offset-1 glass form-glass">
            <h1 class="text-center">Izmeni stan</h1>
            <form action="/apts/<%= apt._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3 text-input">
                    <label class="form-label" for="title">Naziv</label>
                    <input class="form-control" type="text" id="title" name="apt[title]" value="<%=apt.title %>"
                        required>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="mb-3 text-input">
                    <label class="form-label" for="short_description">Kratak opis:</label>
                    <textarea class="form-control" name="apt[short_description]" id="short_description" cols="30"
                        rows="5" required><%= apt.short_description %></textarea>
                    <div class="valid-feedback">Odlicno!</div>
                </div>
                <div class="number-inputs d-flex row flex-row mb-3">
                    <div class="number-input col-6">
                        <label class="form-label" for="price">Cena:</label>
                        <input class="form-control" type="number" name="apt[price]" id="price" value="<%=apt.price %>"
                            required>
                        <div class="valid-feedback">Odlicno!</div>
                    </div>
                    <div class="number-input col-6">
                        <label class="form-label" for="sq_mt">Metara kvadratnih:</label>
                        <input class="form-control" type="number" name="apt[sq_mt]" id="sq_mt" value="<%=apt.sq_mt %>"
                            required>
                        <div class="valid-feedback">Odlicno!</div>
                    </div>
                </div>
                <div class="number-inputs row d-flex flex-row mb-3">
                    <div class="number-input col-6">
                        <label class="form-label" for="rooms">Broj soba:</label>
                        <input class="form-control" type="number" name="apt[rooms]" id="rooms" value="<%=apt.rooms %>"
                            required>
                        <div class="valid-feedback">Odlicno!</div>
                    </div>
                    <div class="number-input col-6">
                        <label class="form-label" for="floor">Sprat:</label>
                        <input class="form-control" type="number" name="apt[floor]" value="<%=apt.floor %>" id="floor">
                        <div class="valid-feedback">Odlicno!</div>
                    </div>
                </div>
                <div class="number-inputs row d-flex flex-row mb-3">
                    <div class="number-input col-6">
                        <label class="form-label" for="lat">Latituda:</label>
                        <input class="form-control" type="number" name="apt[lat]" id="lat" value="<%=apt.lat %>"
                            required>
                        <div class="valid-feedback">Odlicno!</div>
                    </div>
                    <div class="number-input col-6">
                        <label class="form-label" for="long">Longituda:</label>
                        <input class="form-control" type="number" name="apt[long]" id="long" value="<%=apt.long %>"
                            required>
                        <div class="valid-feedback">Odlicno!</div>
                    </div>
                </div>
                <div class="buttons d-flex flex-row">
                <div class="d-inline flex-grow-1 me-1 col-6">
                    <button class="btn btn-danger col-12" type="submit">Izmeni</button>
                </div><a class="card-link btn btn-secondary flex-grow-1 col-6" href="/apts/<%= apt._id %> ">Vrati se na stan</a></div>
            </form>
            
        </div>
        <div class="oval1"></div>
        <div class="oval2"></div>
        <div class="oval3"></div>
        <div class="oval4"></div>
    </div>