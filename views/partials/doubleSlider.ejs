<div class="wrapper form-control row d-flex flex-row">
    <div class="price-input col-7">
        <div class="field">
            <span class="amount">Min</span>
            <input type="number" class="input-min" value="0"><span class="currency">€</span>
        </div>
        <div class="separator">-</div>
        <div class="field">
            <span class="amount">Max</span>
            <input type="number" class="input-max" value="600000"><span class="currency">€</span>
        </div>
    </div>
    <div class="double-slider col-5">
    <div class="slider">
        <div class="progress"></div>
    </div>
    <div class="range-input">
        <input type="range" class="range-min" min="0" max="600000" value="0" step="1000">
        <input type="range" class="range-max" min="0" max="600000" value="600000" step="1000">
    </div></div>
</div>